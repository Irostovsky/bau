<% semantic_form_for([@kit, @product], :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
	<% f.inputs :title => 'Add Product' do %>
		<%= f.input :name  %>
		<%= f.input :description  %>
		<%= f.input :price  %>
		<%= f.input :avatar, :as => :file  %>
		<%= f.buttons %>
	<% end -%>
	
<% end %>

<%= link_to 'Back', kit_path(@kit) %>